{
  "_meta": {
    "version": "1.1.0",
    "description": "Hive configuration for Backlink Broadcast swarm"
  },
  "hive": {
    "name": "Backlink Broadcast Hive",
    "heartbeat_interval_seconds": 60,
    "max_concurrent_bees": 10,
    "log_level": "info"
  },
  "broadcast_timing": {
    "max_talk_window_seconds": 60,
    "required_next_track_announcement": true,
    "weather_update_minutes": [8, 38],
    "traffic_update_minute": 0,
    "status_tweet_hours": [0, 6, 12, 18]
  },
  "twitter_schedule": {
    "status_updates": "every_6_hours",
    "weather_on_8s": true,
    "breaking_news": "immediate",
    "sports_scores": "on_final",
    "new_nodes": "on_detection",
    "dao_proposals": "on_creation"
  },
  "dao_integration": {
    "vote_via_payment": true,
    "min_vote_amount": 1.00,
    "proposal_tweet_frequency": "daily"
  },
  "sponsored_content": {
    "traffic_sponsor": {
      "active": false,
      "name": null,
      "rate": 50.00,
      "frequency": "hourly"
    }
  },
  "schedules": {
    "stream_monitor": {
      "interval_minutes": 1,
      "enabled": true,
      "description": "Monitor stream health every minute"
    },
    "listener_intel": {
      "interval_minutes": 5,
      "enabled": true,
      "description": "Gather listener intelligence"
    },
    "social_poster": {
      "interval_minutes": 15,
      "enabled": true,
      "description": "Check for content to post"
    },
    "show_prep": {
      "interval_minutes": 30,
      "enabled": true,
      "description": "Prepare show content"
    },
    "trend_scout": {
      "interval_minutes": 60,
      "enabled": true,
      "description": "Scout for trends hourly"
    },
    "clip_cutter": {
      "interval_minutes": 60,
      "enabled": true,
      "description": "Look for clippable moments"
    },
    "sponsor_hunter": {
      "interval_minutes": 1440,
      "enabled": true,
      "description": "Daily sponsor pipeline review"
    },
    "engagement": {
      "interval_minutes": 10,
      "enabled": true,
      "description": "Check for community interactions"
    },
    "weather": {
      "interval_minutes": 60,
      "enabled": true,
      "description": "Check weather hourly (triggered on 8s)"
    },
    "traffic_sponsor": {
      "interval_minutes": 60,
      "enabled": true,
      "description": "Check traffic hourly (triggered on hour)"
    },
    "sports_tracker": {
      "interval_minutes": 15,
      "enabled": true,
      "description": "Track sports scores for node locations"
    },
    "dao_update": {
      "interval_minutes": 60,
      "enabled": true,
      "description": "Check DAO proposals"
    }
  },
  "event_triggers": {
    "donation": {
      "bees": ["engagement", "social_poster", "dao_update"],
      "priority": "high",
      "description": "When a donation is received"
    },
    "mention": {
      "bees": ["engagement", "listener_intel"],
      "priority": "normal",
      "description": "When the station is mentioned"
    },
    "new_listener": {
      "bees": ["listener_intel", "social_poster"],
      "priority": "normal",
      "description": "When a new listener is detected"
    },
    "trend_alert": {
      "bees": ["show_prep", "social_poster"],
      "priority": "high",
      "description": "When a hot trend is detected"
    },
    "vip_detected": {
      "bees": ["engagement", "show_prep"],
      "priority": "high",
      "description": "When a VIP listener is identified"
    },
    "stream_issue": {
      "bees": ["stream_monitor"],
      "priority": "critical",
      "description": "When a stream problem is detected"
    },
    "sponsor_response": {
      "bees": ["sponsor_hunter"],
      "priority": "high",
      "description": "When a sponsor responds"
    },
    "weather_check": {
        "bees": ["weather"],
        "priority": "normal",
        "description": "Triggered manually or by schedule for on-the-8s"
    },
    "traffic_check": {
        "bees": ["traffic_sponsor"],
        "priority": "normal",
        "description": "Triggered manually or by schedule for on-the-hour"
    }
  },
  "integrations": {
    "plausible": {
      "enabled": true,
      "domain": "andonlabs.com",
      "api_host": "https://plausible.io"
    },
    "browser_use": {
      "enabled": true,
      "api_key_env": "BROWSER_USE_API_KEY",
      "description": "Cloud browser automation for social posting and research"
    },
    "twitter": {
      "enabled": true,
      "api_key_env": "TWITTER_API_KEY",
      "api_secret_env": "TWITTER_API_SECRET",
      "access_token_env": "TWITTER_ACCESS_TOKEN",
      "access_token_secret_env": "TWITTER_ACCESS_TOKEN_SECRET",
      "handle": "@BacklinkRadio"
    },
    "spotify": {
      "enabled": false,
      "api_key_env": "SPOTIFY_API_KEY"
    },
    "streaming": {
      "enabled": false,
      "platform": "icecast",
      "endpoint": "https://das-edge12-live365-dal02.cdnstream.com/a13541"
    },
    "payments": {
      "enabled": false,
      "providers": ["stripe", "paypal", "bitcoin"]
    },
    "trivia": {
      "enabled": true,
      "providers": [
        {
          "name": "opentdb",
          "enabled": true,
          "requires_key": false
        },
        {
          "name": "uselessfacts",
          "enabled": true,
          "requires_key": false
        },
        {
          "name": "api_ninjas",
          "enabled": true,
          "requires_key": true,
          "api_key_env": "API_NINJAS_KEY"
        }
      ]
    }
  },
  "llm": {
    "provider": "google",
    "model": "gemini-2.0-flash-exp",
    "temperature": 0.3,
    "api_key_env": "GOOGLE_API_KEY",
    "use_for_bees": [
      "show_prep",
      "social_poster",
      "engagement",
      "trend_scout"
    ]
  }
}
